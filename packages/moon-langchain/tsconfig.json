{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "strict": false,
        "sourceMap": true,
        "lib": [
            "esnext"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json"
    ]
}