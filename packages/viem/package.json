{
  "name": "@moonup/viem",
  "version": "0.0.7",
  "author": "0xEwhal <ewhal@bytemasons.com>",
  "type": "commonjs",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "typings": "./dist/index.d.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "require": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "prepare": "tsup",
    "size": "size-limit",
    "start": "tsup --watch",
    "prettier": "prettier --check src/",
    "prettier:fix": "prettier --write src/",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:fix": "npm run lint --fix",
    "verify": "run-p prettier lint",
    "verify:fix": "npm run prettier:fix && npm run lint:fix",
    "build": "tsup src -- --dts-resolve",
    "build:fast": "tsup src",
    "dev": "tsup src --watch",
    "test": "vitest",
    "test:watch": "vitest watch",
    "coverage": "vitest run --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/moon-viem.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/moon-viem.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.1",
    "@tsconfig/recommended": "^1.0.3",
    "@tsconfig/vite-react": "^3.0.0",
    "@vitest/coverage-v8": "^0.34.2",
    "happy-dom": "^6.0.4",
    "husky": "^8.0.3",
    "size-limit": "^11.0.1",
    "tslib": "^2.6.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@ethersproject/abstract-signer": "^5.7.0",
    "@moonup/moon-sdk": "workspace: *",
    "viem": "^2.7.3"
  }
}
