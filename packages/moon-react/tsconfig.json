{
  "extends": "@tsconfig/vite-react/tsconfig.json",
  "include": ["src", "types", "tests"],
  "types": ["vitest/globals", "@testing-library/jest-dom"],
  "typeRoots": [],
  "outDir": "./dist",
  "exclude": [
    "./storybook",
    "src/stories/***",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "noEmit": false,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": false,
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/asset/*"],
      "@components/*": ["src/components/*"],
      "@public-components/*": ["src/components/public/*"],
      "@hooks/*": ["src/hooks/*"],
      "@moon-react-types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@context/*": ["src/context/*"]
    }
  }
}
